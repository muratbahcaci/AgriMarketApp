<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imageViewUrunResmi"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/textViewUrunAdi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Ürün Adı"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toEndOf="@id/imageViewUrunResmi"
        app:layout_constraintTop_toTopOf="@id/imageViewUrunResmi"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewUrunFiyati"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ürün Fiyatı"
        app:layout_constraintStart_toStartOf="@id/textViewUrunAdi"
        app:layout_constraintTop_toBottomOf="@id/textViewUrunAdi" />

    <TextView
        android:id="@+id/textViewUrunAciklamasi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ürün Açıklaması"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/textViewUrunFiyati"
        app:layout_constraintTop_toBottomOf="@id/textViewUrunFiyati"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/imageViewUrunResmi" />
</androidx.constraintlayout.widget.ConstraintLayout>
